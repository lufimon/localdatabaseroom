<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_lb_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ID : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_val_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="userId"
        app:layout_constraintBottom_toBottomOf="@+id/txt_lb_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_lb_id"
        app:layout_constraintTop_toTopOf="@+id/txt_lb_id" />

    <TextView
        android:id="@+id/txt_lb_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="First Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_lb_id" />

    <TextView
        android:id="@+id/txt_val_firstname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="first name"
        app:layout_constraintBottom_toBottomOf="@+id/txt_lb_firstname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_lb_firstname"
        app:layout_constraintTop_toTopOf="@+id/txt_lb_firstname" />

    <TextView
        android:id="@+id/txt_lb_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Last Name: "
        app:layout_constraintStart_toStartOf="@+id/txt_lb_firstname"
        app:layout_constraintTop_toBottomOf="@+id/txt_lb_firstname" />

    <TextView
        android:id="@+id/txt_val_lastname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="last name"
        app:layout_constraintBottom_toBottomOf="@+id/txt_lb_lastname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_lb_lastname"
        app:layout_constraintTop_toTopOf="@+id/txt_lb_lastname" />

    <TextView
        android:id="@+id/txt_lb_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Age:"
        app:layout_constraintStart_toStartOf="@+id/txt_lb_lastname"
        app:layout_constraintTop_toBottomOf="@+id/txt_lb_lastname" />

    <TextView
        android:id="@+id/txt_val_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="age"
        app:layout_constraintBottom_toBottomOf="@+id/txt_lb_age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_lb_age"
        app:layout_constraintTop_toTopOf="@+id/txt_lb_age" />

    <TextView
        android:id="@+id/txt_lb_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Facebook:"
        app:layout_constraintStart_toStartOf="@+id/txt_lb_age"
        app:layout_constraintTop_toBottomOf="@+id/txt_lb_age" />

    <TextView
        android:id="@+id/txt_val_facebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="facebook"
        app:layout_constraintBottom_toBottomOf="@+id/txt_lb_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_lb_facebook"
        app:layout_constraintTop_toTopOf="@+id/txt_lb_facebook" />

    <TextView
        android:id="@+id/txt_lb_lineid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Line ID:"
        app:layout_constraintStart_toStartOf="@+id/txt_lb_facebook"
        app:layout_constraintTop_toBottomOf="@+id/txt_lb_facebook" />

    <TextView
        android:id="@+id/txt_lb_instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Instagram:"
        app:layout_constraintStart_toStartOf="@+id/txt_lb_lineid"
        app:layout_constraintTop_toBottomOf="@+id/txt_lb_lineid" />

    <TextView
        android:id="@+id/txt_val_lineid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="line id"
        app:layout_constraintBottom_toBottomOf="@+id/txt_lb_lineid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_lb_lineid"
        app:layout_constraintTop_toTopOf="@+id/txt_lb_lineid" />

    <TextView
        android:id="@+id/txt_val_instagram"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="instagram"
        app:layout_constraintBottom_toBottomOf="@+id/txt_lb_instagram"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_lb_instagram"
        app:layout_constraintTop_toTopOf="@+id/txt_lb_instagram" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_val_instagram" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_edit"
        app:layout_constraintTop_toBottomOf="@+id/txt_val_instagram" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>